    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "All tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test current file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "args": [
                "${workspaceFolder}/test/${fileBasenameNoExtension}",
                // "--config",
                // "jest.config.js"
              ],            
        }

    ]
}